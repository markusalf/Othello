<UserControl x:Class="Othello.Views.Pages.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/Images/GeneralBackground.jpg"/>
        </Grid.Background>
        <Button x:Name="StartBtn" Height="170" Width="240" BorderThickness="0,0,0,0" Margin="118,225,442,55">
            <Image Source="/Views/Images/Start.png" Height="60" Width="120"></Image>
            <Button.Background>
                <ImageBrush ImageSource="/Views/Images/Button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="RulesBtn" Height="170" Width="240" BorderThickness="0,0,0,0" Margin="416,225,144,55">
            <Image Source="/Views/Images/Rules.png" Height="60" Width="120"></Image>
            <Button.Background>
                <ImageBrush ImageSource="/Views/Images/Button.png"/>
            </Button.Background>
        </Button>
        <Image Source="/Views/Images/OthelloText.png" Width="450" Margin="175,78,175,207"/>
    </Grid>
</UserControl>
