<UserControl x:Class="Othello.Views.Pages.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views.Pages"
             xmlns:vm="clr-namespace:Othello.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/GeneralBackground.png" Stretch="Fill"/>
        </Grid.Background>
        <Image Source="/Images/OthelloText.png" Width="450" Margin="375,78,375,364"/>
        <Button x:Name="StartBtn" Height="170" Width="240" BorderThickness="0,0,0,0" Margin="118,225,442,55" Command="{Binding StartGameCommand, Source={x:Static vm:MainViewModel.Instance}}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Button.png"/>
            </Button.Background>
            <Image Source="/Images/Start.png" Height="60" Width="120"/>
        </Button>
        <Button x:Name="RulesBtn" Height="170" Width="240" BorderThickness="0,0,0,0" Margin="416,225,144,55">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Button.png"/>
            </Button.Background>
            <Image Source="/Images/Rules.png" Height="60" Width="120"/>
        </Button>
    </Grid>
</UserControl>
