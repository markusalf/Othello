<UserControl x:Class="Othello.Views.Pages.RulesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views.Pages" 
             xmlns:vm="clr-namespace:Othello.ViewModels"             
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.DataContext>
        <vm:RulesViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/GeneralBackground.png"/>
        </Grid.Background>
        <Grid Margin="-36,0,315,86">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/RulesScroll.png"/>
            </Grid.Background>
        </Grid>
        <Button x:Name="ReturnBtn" BorderThickness="0,0,0,0" Margin="930,578,75,34" Command="{Binding StartPageCommand, Source={x:Static vm:MainViewModel.Instance}}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Button.png"/>
            </Button.Background>
            <Image Source="/Images/Return.png" Height="90" Width="158"/>
        </Button>
    </Grid>
</UserControl>
