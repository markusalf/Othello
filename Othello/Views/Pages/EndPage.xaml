<UserControl x:Class="Othello.Views.Pages.EndPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/GeneralBackground.png" Stretch="Fill"/>
        </Grid.Background>
        <Button x:Name="RulesBtn" Width="240" BorderThickness="0,0,0,0" Margin="435,302,125,0">
            <Image Source="/Images/Restart.png" Height="71" Width="179"/>
            <Button.Background>
                <ImageBrush ImageSource="/Images/Button.png"/>
            </Button.Background>
        </Button>
        <Label HorizontalAlignment="Center" Margin="0,0,0,335">
            <Label.Content>
                <Image Source="/Images/GameOverText.png" Height="126" Width="448"/>
            </Label.Content>
        </Label>
        <Label Content="{Binding}" VerticalAlignment="Top" HorizontalAlignment="Center" Height="300" Width="550" Margin="0,40,0,0">
            <Label.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Images/WinnerBoard.png"/>
            </Label.Background>
        </Label>
        <Button x:Name="StartBtn" Width="240" BorderThickness="0,0,0,0" Margin="137,302,423,0">
            <Button.Background>
                <ImageBrush ImageSource="/Images/Button.png"/>
            </Button.Background>
            <Image Source="/Images/Quit.png" Height="53" Width="110" Margin="-19,5,0,0"/>
        </Button>
    </Grid>
</UserControl>
