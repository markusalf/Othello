<UserControl x:Class="Othello.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views"
             xmlns:vm="clr-namespace:Othello.ViewModels"
             xmlns:Components="clr-namespace:Othello.Views.Components"
             d:DataContext="{d:DesignInstance vm:GameViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">
    <Border
        BorderBrush="LightGray"
        BorderThickness="2">

        <Grid Height="800" Width="900" Background="#d1efff">
            <ItemsControl Grid.Column="0" Grid.Row="0" Height="800" Width="800" Background="#d1efff" HorizontalAlignment="Left" ItemsSource="{Binding Player1.Board}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="8" Rows="8" Height="800" Width="800" MouseLeftButtonDown="ItemsControl_MouseLeftButtonDown"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
