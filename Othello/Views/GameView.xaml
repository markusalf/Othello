<UserControl x:Class="Othello.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views"
             xmlns:vm="clr-namespace:Othello.ViewModels"
             xmlns:Components="clr-namespace:Othello.Views.Components"
             d:DataContext="{d:DesignInstance vm:GameViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
        BorderBrush="black"
        BorderThickness="1">

        <Grid Background="#d1efff" HorizontalAlignment="Left">
            <ItemsControl Name="boardPiece" Height="600" Width="600" Background="#d1efff" ItemsSource="{Binding Player1.Board}" MouseLeftButtonDown="boardPiece_MouseLeftButtonDown">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="8" Rows="8" MinHeight="600" MinWidth="600"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
