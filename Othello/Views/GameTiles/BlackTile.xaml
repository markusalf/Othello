<UserControl x:Class="Othello.Views.GameTiles.BlackTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.Views.GameTiles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Ellipse Fill="Black" Height="100" Width="100" Stroke="White" StrokeThickness="1" >
            <Ellipse.BitmapEffect>
                <DropShadowBitmapEffect Color="White" Direction="-100"
                    ShadowDepth="5" Softness=".9" />
            </Ellipse.BitmapEffect>
            
        </Ellipse>

