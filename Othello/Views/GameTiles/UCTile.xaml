<UserControl x:Class="Othello.Views.GameTiles.UCTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:Othello.Models"
             xmlns:local="clr-namespace:Othello.Views.GameTiles"
             d:DataContext="{d:DesignInstance models:Tile}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="75" Width="75">
        <Rectangle
            Fill="{Binding SquareColor}"
            Stroke="Black"
            StrokeThickness="1.3"/>
        <Ellipse
            Width="50"
            Height="50"
            Fill="{Binding EllipseColor}">
            <Ellipse.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="2" BlurRadius="18"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
